{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* -------------------- PROJECT STRUCTURE -------------------- */
    "rootDir": "./",
    "outDir": "./dist",

    /* -------------------- ENVIRONMENT -------------------- */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* -------------------- OUTPUT -------------------- */
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* -------------------- INTEROP -------------------- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* -------------------- TYPE SAFETY -------------------- */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* -------------------- NODE -------------------- */
    "types": ["node"],
    "skipLibCheck": true,

    /* -------------------- PERFORMANCE -------------------- */
    "forceConsistentCasingInFileNames": true
  },

  /* -------------------- INCLUDE / EXCLUDE -------------------- */
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
